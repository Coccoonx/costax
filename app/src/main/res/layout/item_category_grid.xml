<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_middle_short_mini"
    android:layout_marginEnd="@dimen/margin_middle_short"
    android:layout_marginLeft="@dimen/margin_middle_short"
    android:layout_marginRight="@dimen/margin_middle_short"
    android:layout_marginStart="@dimen/margin_middle_short"
    android:layout_marginTop="@dimen/margin_middle_short_mini">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="0dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/margin_middle_short"
            android:paddingRight="@dimen/margin_middle_short">

            <ImageView
                android:id="@+id/cat_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_middle_short"
                android:layout_marginStart="@dimen/margin_middle_short"
                android:scaleType="fitCenter"
                android:src="@drawable/nopreview" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/cat_image"
                android:layout_toRightOf="@id/cat_image"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/margin_middle_short">

                <TextView
                    android:id="@+id/cat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_middle_short"
                    android:layout_marginStart="@dimen/margin_middle_short"
                    android:text="Santa Lucia"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_normal_big"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/cat_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_middle_short"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/margin_middle_short"
                    android:text="Carrefour Ange raphael"
                    android:textColor="@color/textColorGray"
                    android:textSize="@dimen/item_text_standard" />


            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="@dimen/margin_middle_short_mini"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_right_arrow"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>