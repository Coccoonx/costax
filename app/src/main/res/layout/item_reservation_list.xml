<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_middle_short_mini"
    android:layout_marginEnd="@dimen/margin_middle_short"
    android:layout_marginLeft="@dimen/margin_middle_short"
    android:layout_marginRight="@dimen/margin_middle_short"
    android:layout_marginStart="@dimen/margin_middle_short"
    android:layout_marginTop="@dimen/margin_middle_short_mini">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="0dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_middle_short"
            android:paddingRight="@dimen/margin_middle_short">

            <ImageView
                android:id="@+id/free_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_middle_short"
                android:layout_marginStart="@dimen/margin_middle_short"
                android:scaleType="fitCenter"
                android:src="@drawable/nopreview" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/free_image"
                android:layout_toRightOf="@id/free_image"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/margin_middle_short">

                <TextView
                    android:id="@+id/item_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_middle_short"
                    android:layout_marginStart="@dimen/margin_middle_short"
                    android:text="Paroisse de Tamdja"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_normal_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_product_trade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_middle_short"
                    android:layout_marginStart="@dimen/margin_middle_short"
                    android:text="Mifi"
                    android:textColor="@color/textColorGray"
                    android:textSize="@dimen/item_text_standard" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_middle_short"
                    android:layout_marginStart="@dimen/margin_middle_short"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/item_label_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Code:"
                        android:textColor="@color/textColorGray"
                        android:textSize="@dimen/item_title" />

                    <TextView
                        android:id="@+id/item_label_code_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_middle_short"
                        android:layout_marginStart="@dimen/margin_middle_short"
                        android:text="TCHOKOTE"
                        android:textColor="@android:color/holo_red_light"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_middle_short"
                    android:layout_marginStart="@dimen/margin_middle_short"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/item_label_unit_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promo Price:"
                        android:textColor="@color/textColorGray"
                        android:textSize="@dimen/item_title" />

                    <TextView
                        android:id="@+id/item_label_unit_price_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_middle_short"
                        android:layout_marginStart="@dimen/margin_middle_short"
                        android:text="3 500"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_middle_short"
                    android:layout_marginStart="@dimen/margin_middle_short"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/item_label_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:textColor="@color/textColorGray"
                        android:textSize="@dimen/item_title" />

                    <TextView
                        android:id="@+id/item_label_quantity_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_middle_short"
                        android:layout_marginStart="@dimen/margin_middle_short"
                        android:text="3"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_middle_short"
                    android:layout_marginStart="@dimen/margin_middle_short"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/item_label_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Price"
                        android:textColor="@color/textColorGray"
                        android:textSize="@dimen/item_title" />

                    <TextView
                        android:id="@+id/item_label_price_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_middle_short"
                        android:layout_marginStart="@dimen/margin_middle_short"
                        android:text="10 500"
                        android:textColor="@android:color/holo_red_light"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_middle_short"
                    android:layout_marginStart="@dimen/margin_middle_short"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/item_label_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reserved on:"
                        android:textColor="@color/textColorGray"
                        android:textSize="@dimen/item_title" />

                    <TextView
                        android:id="@+id/item_label_date_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_middle_short"
                        android:layout_marginStart="@dimen/margin_middle_short"
                        android:text="23/05/2017"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/item_title" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>